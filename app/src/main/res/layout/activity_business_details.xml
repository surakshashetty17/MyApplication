<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessDetailsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="BusinessDetails Activity"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:orientation="vertical"-->
<!--            android:layout_marginTop="60dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Company/Shop Name"/>

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Established Year" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Office Landline" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="About Business" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Street Address" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Pincode" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Website" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Weekly Holidays" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textSize="16sp"
                        android:background="@drawable/edit_blue"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:textSize="16sp"
                        android:background="@drawable/edittext"
                        android:buttonTint="#5DBBE2"/>

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text=" Monday"
                        android:textSize="16sp"
                        android:background="@drawable/edittext"
                        android:textColor="@color/black"
                        android:theme="@style/MyCheckBox"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/edittext"/>

                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textSize="16sp"
                        android:background="@drawable/edittext"/>

                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text=" Thursday"
                        android:textSize="16sp"
                        android:background="@drawable/edittext"/>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Friday"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Working Hours" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner1"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/roboto"
                            android:spinnerMode="dropdown"
                            android:background="@drawable/buttonspinner1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="-"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner2"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/roboto"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/buttonspinner"/>

<!--                    <Spinner-->
<!--                    android:id="@+id/spinner1"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="40dp" />-->
<!--                <Spinner-->
<!--                    android:id="@+id/spinner2"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_marginLeft="20dp"/>-->


                </LinearLayout>

                <Button
                    android:id="@+id/save_changes"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@color/green"
                    android:fontFamily="@font/roboto"
                    android:text="Save Changes"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
    </LinearLayout>
<!--        </LinearLayout>-->
<!--    </ScrollView>-->

</ScrollView>