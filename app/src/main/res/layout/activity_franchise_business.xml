<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FranchiseBusinessActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Business/Vendor"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id/Title/Keyword"
            android:background="@drawable/edittext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/light_black"
            android:textSize="16sp"
            android:textColor="@color/light_black"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1">

            <Button
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_green"
                android:fontFamily="@font/roboto"
                android:text="Apply"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_green"
                android:fontFamily="@font/roboto"
                android:text="clear"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/button_newbusiness"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_green"
                android:fontFamily="@font/roboto"
                android:text="+ New Business"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha=".5"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linear1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/profile_pic"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="2563"
                            android:textSize="14sp"
                            android:textColor="@color/green"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nagraj Media"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2c626d"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nagraj B"
                            android:textSize="14sp"
                            android:textColor="@color/dark_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9958647826"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#80400b"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nagrajmedia1234@gmail.com"
                            android:textSize="14sp"
                            android:textColor="@color/dark_blue"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="570023"
                            android:textSize="14sp"
                            android:textColor="@color/dark_blue"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="On Board:"
                                android:textSize="10sp"
                                android:textColor="#80400b"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="06-07-2021"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:textColor="#80400b"
                                android:layout_marginRight="2dp"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/button_edit_newbusiness"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_darkblue"
                    android:fontFamily="@font/roboto"
                    android:text="Edit"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>


                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_darkblue"
                    android:fontFamily="@font/roboto"
                    android:text="Catalog"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/managepincode"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_darkblue"
                    android:fontFamily="@font/roboto"
                    android:text="Pincodes"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>