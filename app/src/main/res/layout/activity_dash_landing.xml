<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashLandingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="#ececec">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="4"
                        android:textSize="30sp"
                        android:textStyle="normal"
                        android:layout_marginTop="8dp"
                        android:textColor="#f70"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Listed"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="1"
                            android:textSize="30sp"
                            android:textStyle="normal"
                            android:layout_marginTop="8dp"
                            android:textColor="#00b549"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved Business"
                            android:textSize="15sp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="30sp"
                            android:textStyle="normal"
                            android:layout_marginTop="8dp"
                            android:textColor="#3a9aff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preimium Listings"
                            android:textSize="15sp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020"
                            android:textSize="30sp"
                            android:textStyle="normal"
                            android:layout_marginTop="8dp"
                            android:textColor="ba5cff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Sales (Rs)"
                            android:textSize="15sp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
        </LinearLayout>

</LinearLayout>